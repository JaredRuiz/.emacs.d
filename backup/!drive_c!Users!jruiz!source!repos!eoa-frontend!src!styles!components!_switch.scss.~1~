// Usage:
// <label class="switch">
//   <input type="checkbox">
//   <span class="slider round"></span>
// </label>
// Notes:
// The label should be parent and the span must directly proceed input
/* The switch - the box around the slider */

.switch {
  position: relative;
  display: inline-block;
  width: 28px;
  height: 16px;
}

.switch input {
  position: absolute;
  z-index: -1;
  opacity: 0;
}

.slider {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: $lip-stick;
  -webkit-transition: .4s;
  transition: .4s;
}

.slider:before {
  position: absolute;
  content: "";
  top: 1px;
  left: 1px;
  width: 14px;
  height: 14px;
  -webkit-transition: .4s;
  transition: .4s;
  background-color: $white;
}

input:checked+.slider:before {
  left: -3px;
}

input:checked+.slider {
  background-color: $medium-green;
}

input:checked:focus+.slider {
  background-color: $medium-green;
  outline: 0;
  box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
}

input:focus+.slider {
  background-color: $lip-stick;
  outline: 0;
  box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
}

input:checked+.slider:before {
  -webkit-transform: translateX(16px);
  -ms-transform: translateX(16px);
  transform: translateX(16px);
}

/* Rounded sliders */

.slider.round {
  border-radius: 10px;
}

.slider.round:before {
  border-radius: 10px;
}

// custom sliders
.Show-Hide-All-Details-Slider {

  &.switch {
    width: 31px;
    height: 18px;
  }

  .slider {
    background-color: $cloudy-blue-two;
  }

  .slider:before {
    background-color: $white;
    box-shadow: 1px 1px 10px 0px $black-16;
    width: 16px;
    height: 16px;
  }

  input:checked+.slider {
    background-color: $white;
  }

  input:checked+.slider:before {
    background-color: $cloudy-blue-two;
    left: -1px;

    @supports (-ms-ime-align: auto) {
      left: -2px;
    }
  }

  input:checked:focus+.slider {
    background-color: $white;
    outline: 0;
    box-shadow: none;
  }

  input:checked:focus+.slider:before {
    background-color: $cloudy-blue-two;
  }

  input:focus+.slider {
    background-color: $cloudy-blue-two;
    outline: 0;
    box-shadow: none;
  }
}

// Usage:
// <label class="checkmark">
//   <input type="checkbox">
//   <span class="button square"></span>
// </label>
// Notes:
// The label should be parent and the span must directly proceed input
/* The switch - the box around the slider */

.checkmark {
  position: relative;
  display: inline-block;
  width: 20px;
  height: 20px;
}

.checkmark input {
  position: absolute;
  z-index: -1;
  opacity: 0;
}

.button {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: $white;
  border: solid 0.5px $bluey-grey;
  -webkit-transition: .4s;
  transition: .4s;
}

.button:before {
  position: absolute;
  content: "";
  top: 1px;
  left: 1px;
  width: 14px;
  height: 14px;
  -webkit-transition: .4s;
  transition: .4s;
}

input:checked+.button {
  background-color: $pale-grey-two;
  border: solid 0.5px $bluey-grey;
}

input:checked:focus+.button {
  background-color: $pale-grey-two;
  border: solid 0.5px $bluey-grey;
  outline: 0;
}

input:focus+.button {
  background-color: $white;
  border: solid 0.5px $bluey-grey;
  outline: 0;
}

/* square buttons */
.button.square {
  border-radius: 4px;
}

.button.square:before {
  border-radius: 4px;
}
